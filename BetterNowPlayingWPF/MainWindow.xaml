<Window x:Class="BetterNowPlayingWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BetterNowPlayingWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Label Content="Now Playing" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="79"/> 
        <Button Content="Start" HorizontalAlignment="Left" Margin="352,10,0,0" VerticalAlignment="Top" Width="75" Click="Start_Button"/>
        <Button Content="Stop" Margin="432,10,10,0" VerticalAlignment="Top" Click="Stop_Button"/>
        <TextBox x:Name="Now_Playing" Height="23" Margin="10,36,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" IsReadOnly="True"/>
        <Label Content="Requests" HorizontalAlignment="Left" Margin="10,64,0,0" VerticalAlignment="Top"/>
        <ScrollViewer Height="219" Margin="0,95,0,5" HorizontalAlignment="Left" Width="507">
            <TextBlock x:Name="Request_List" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" IsEnabled="true"/>
        </ScrollViewer>
    </Grid>
</Window>
